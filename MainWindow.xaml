<Window x:Class="SelfHealingDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Healix.NET Dashboard" Height="600" Width="900"
        Background="#2E3A4B">
    
    <Grid>
        <TabControl>
            <TabItem Header="Healing Log">
                <!-- جدول عرض الأحداث -->
                <DataGrid ItemsSource="{Binding HealingEvents}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding Time}" />
                        <DataGridTextColumn Header="Context" Binding="{Binding Context}" />
                        <DataGridTextColumn Header="Exception" Binding="{Binding Exception.Message}" />
                        <DataGridTextColumn Header="Policy" Binding="{Binding PolicyName}" />
                        <DataGridCheckBoxColumn Header="Success" Binding="{Binding Success}" />
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Policies">
                <!-- إدارة السياسات وتفعيلها -->
            </TabItem>
            <TabItem Header="Statistics">
                <!-- إحصائيات الإصلاحات -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>